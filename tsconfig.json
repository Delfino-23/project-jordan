{
  "compilerOptions": {
    "target": "ES2020", // Output moderno
    "module": "ESNext", // Gera ES Modules
    "moduleResolution": "node",
    "outDir": "./dist", // Pasta de build
    "rootDir": "./src", // Fonte em TS
    "strict": true,
    "esModuleInterop": true, // Import default de libs CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
